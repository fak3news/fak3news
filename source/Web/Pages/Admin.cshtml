@page
@model Fak3News.Web.Pages.AdminModel
@{
}

<div class="container gap-3 list-group">

    @foreach (var item in Model.Articles)
    {
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <a class="col" asp-page="/Article" asp-route-ID="@item.Id">@item.Title</a>

            <div class="btn-group">
                <button type="button" class="btn btn-info">Details</button>
                <a type="button" class="btn btn-warning" asp-page="/EditArticle" asp-route-ID="@item.Id">Edit</a>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    }
</div>