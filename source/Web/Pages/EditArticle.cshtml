@page
@model Fak3News.Web.Pages.EditArticleModel
@{
}

<link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
<form method="post" asp-page-handler="Article">
    <div class="container gap-3">

        <div class="row">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">ID</span>
                </div>
                <input type="text" class="form-control" value="@Model.Article?.Id" name="id" >
            </div>
        </div>

        <div class="row">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Title</span>
                </div>
                <input type="text" class="form-control" value="@Model.Article?.Title" name="title">
            </div>
        </div>

        <div class="row">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Description</span>
                </div>
                <textarea class="form-control" aria-label="With textarea" name="description">@Model.Article?.Description</textarea>
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Content</span>
                </div>
                <textarea class="form-control" aria-label="With textarea" name="content">@Model.Article?.Content</textarea>
            </div>
        </div>
        <input type="submit" />
    </div>
</form>
